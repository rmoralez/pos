# Base de datos PostgreSQL
# Opciones gratuitas:
# - Neon: https://neon.tech (recomendado, 512MB gratis)
# - Supabase: https://supabase.com (500MB gratis)
DATABASE_URL="postgresql://user:password@host:5432/supercommerce?sslmode=require"

# NextAuth - Generar con: openssl rand -base64 32
NEXTAUTH_SECRET="tu-secret-seguro-aqui"
NEXTAUTH_URL="http://localhost:3000"

# AFIP - Certificados Maestros (Modelo Delegado/SaaS)
# El proveedor del sistema configura estos valores UNA VEZ
# Los clientes luego se "relacionan" desde su AFIP
AFIP_PROVIDER_CUIT="20314939493"  # CUIT del proveedor del sistema
AFIP_MASTER_CERT="-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----"  # Certificado X.509 maestro
AFIP_MASTER_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"  # Clave privada maestra
AFIP_MODE="homologacion"  # "homologacion" o "produccion"

# Mercado Pago - https://www.mercadopago.com.ar/developers
MERCADOPAGO_ACCESS_TOKEN="APP_USR-xxx"
MERCADOPAGO_PUBLIC_KEY="APP_USR-xxx"

# Pusher (Real-time) - https://pusher.com
NEXT_PUBLIC_PUSHER_APP_KEY=""
PUSHER_APP_ID=""
PUSHER_SECRET=""
PUSHER_CLUSTER="us2"

# URL de la app
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="SuperCommerce POS"
